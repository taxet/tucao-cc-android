<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    
    
    
    <!-- 顶部文字样式 -->
    <style name="tucao_activity_top">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#373737</item>
        <item name="android:textSize">20sp</item>
        <item name="android:gravity">center</item>
    </style>
        
    <!-- 分区列表页面文字样式 -->
    <style name="tucao_all_list_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#ff00ff</item>
        <item name="android:textSize">16sp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <!-- list_info 文字样式 上（标题） -->
    <style name="list_info_text_title_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#3d3d3d</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:layout_gravity">left</item>
    </style>
    
    <!-- list_info 文字样式 中 （简介） -->
    <style name="list_info_text_description_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#777777</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
        <item name="android:layout_gravity">left</item>
    </style>

    <!-- list_info 文字样式 下 （其他信息） -->
    <style name="list_info_text_style2">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">#a9a9a9</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    
    <!-- video_info 文字样式 -->
    <style name="video_info_text_style">
        <item name="android:layout_weight">1.0</item>
        <item name="android:singleLine">true</item>
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:marqueeRepeatLimit">marquee_forever</item>
    </style>
    
    <!-- video_info页面背景文字样式 -->
    <style name="video_info_background_text_style">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#777777</item>
        <item name="android:textSize">18sp</item>
    </style>
    
    <!-- video_info页面分割线样式（便于统一修改） -->
    <style name="video_info_background_linearlayout_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">2dp</item>
        <item name="android:background">#ff00ff</item>
        <item name="android:orientation">vertical</item>
    </style>

</resources>